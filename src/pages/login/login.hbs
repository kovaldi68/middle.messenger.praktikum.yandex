<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../../styles/style.scss">
    <title>Shi no ka messenger</title>
</head>
<body>
    <main class="page-main">
        <section class="page-main__login login">
            <form class="login__form form form--login">
                <h2 class="form__title">Log In</h2>
                {{> inputBox className="form" id="login" type="text" labelText="Login" placeholder="Login" errorMessage="Invalid login" }}
                {{> inputBox className="form" id="password" type="password" labelText="Password" placeholder="Password" errorMessage="Invalid password" }}
                {{> button className="form" modify="primary" type="submit" buttonText="Log In" }}
                {{> link className="form" linkText="Do not have an account yet?" }}
            </form>
        </section>
    </main>
</body>
</html>